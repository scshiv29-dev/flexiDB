{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local",".env"],
  "globalEnv": [
    "APPWRITE_URL",
    "APPWRITE_PROJECT_ID",
    "APPWRITE_API_KEY"
  ]
  ,
  "pipeline": {
    "@flexidb/appwrite#appwrite-seed":{
      "cache": false
    },
    "@flexidb/web#start":{
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]

    },

    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env":
        [
          "APPWRITE_URL",
          "APPWRITE_PROJECT_ID",
          "APPWRITE_API_KEY"
        ]
      
    },
    "seed":{
      "cache": false,
      "dependsOn": ["@flexidb/appwrite#appwrite-seed"]
    },
    "start":{
      "cache": false,
      "dependsOn": ["@flexidb/web#start"]
    }
  }
}
